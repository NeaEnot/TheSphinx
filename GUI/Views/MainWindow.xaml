<Window x:Class="TheSphinx.GUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI.Views"
        mc:Ignorable="d"
        Title="TheSphynx" Height="480" Width="800" MinHeight="274" MinWidth="497">
    <Grid>
        <DataGrid Margin="0,38,0,51" Name="dataGrid" AutoGeneratedColumns="dataGrid_AutoGeneratedColumns" SelectionMode="Single" IsReadOnly="True">
            <DataGrid.Resources>
                <Style TargetType="DataGridRow">
                    <EventSetter Event="MouseDoubleClick" Handler="DataGridRow_MouseDoubleClick"/>
                </Style>
            </DataGrid.Resources>
        </DataGrid>

        <TextBox Name="tbSearch" Margin="10,10,50,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Name="btnSearch" Content="Search" Margin="0,9,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="40" Click="btnSearch_Click"/>

        <Button Name="btnCreate" Content="Create" HorizontalAlignment="Left" Margin="10,0,0,19" Height="27" Width="69" VerticalAlignment="Bottom" Click="btnCreate_Click"/>
        <Button Name="btnEdit" Content="View/Edit" HorizontalAlignment="Left" Margin="84,0,0,19" Height="27" Width="69" VerticalAlignment="Bottom" Click="btnEdit_Click"/>
        <Button Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Margin="158,0,0,19" Height="27" Width="69" VerticalAlignment="Bottom" Click="btnDelete_Click"/>
    </Grid>
</Window>
